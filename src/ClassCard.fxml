<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="ClassCardController">
    <VBox spacing="10.0" style="-fx-background-color: #eaeaea; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10;">
        <padding>
            <Insets topRightBottomLeft="10.0"/>
        </padding>
        <Text fx:id="classNameText" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Button text="View Students" onAction="#handleViewStudents" />
    </VBox>
</AnchorPane>